A, B = map(int, input().split())


# νΌ μ„Έν…
game_pan = []
cnt = 0
for i in range(1000) :
    for j in range(i + 1) : 
        game_pan.append(i + 1)
        cnt += 1 
        # print(cnt)
        if cnt == B :
            break
    if cnt == B :
        break

# print(game_pan)
slice_game_pan = game_pan[A - 1:]
tot = sum(slice_game_pan)
print(tot)
